                    |     }
                    | });

        section
            h3 V-BIND
            p Permite vincular un Atributo HTML a un valor que tenemos en nuestro Modelo.
            pre
                code(class="javascript" data-trim data-noescape)
                    | var app = new Vue({
                    |     el: '#app',
                    |     data: {
                    |         btnDisabled: true
                    |     }
                    | });

            pre
                code(class="html" data-trim data-noescape)
                    | &lt;div id="app"&gt;
                    |     &lt;!-- v-bind:nombreAtributo --&gt;
                    |     &lt;button v-bind:disabled="btnDisabled"&gt;Enviar Datos&lt;/button&gt;
                    |     &lt;!-- El Atajo : --&gt;
                    |     &lt;button :disabled="btnDisabled"&gt;Cancelar Datos&lt;/button&gt;
                    | &lt;/div&gt;

        section
            h3 Métodos
            pre
                code(class="javascript" data-trim data-noescape)
                    | var app = new Vue({
                    |     el: '#app',
                    |     data: {
                    |         msj: 'Buenos Días'
                    |     },
                    |     methods: {
                    |         mensajeAlert: function() {
                    |             alert(this.msj);
                    |         }
                    |     }
                    | });

        section(data-menu-title="V-ON #1")
            h3 V-ON
            p Manejar Evento
            pre
                code(class="html" data-trim data-noescape)
                    | &lt;div id="app"&gt;
                    |     &lt;button v-on:click="mensajeAlert"&gt;Programate&lt;/button&gt;
                    |     &lt;button @click="mensajeAlert"&gt;Programate @&lt;/button&gt;
                    | &lt;/div&gt;

        section(data-menu-title="V-ON #2")
            h3 V-ON
            p Manejar Evento
            pre
                code(class="javascript" data-trim data-noescape)
                    | var app = new Vue({
                    |     el: '#app',
                    |     data: {
                    |         msj: 'Buenos Días'
                    |     },
                    |     methods: {
                    |         mensajeAlert: function(mensaje, event) {
                    |             console.log(event);
                    |             alert(mensaje);
                    |         }
                    |     }
                    | });

        section(data-menu-title="V-ON #3")
            h3 V-ON
            p Manejar Evento
            pre
                code(class="javascript" data-trim data-noescape)
                    | &lt;div id="app"&gt;
                    |     &lt;button @click="mensajeAlert('Hola Programate', $event)"&gt;Programate @&lt;/button&gt;
                    | &lt;/div&gt;

