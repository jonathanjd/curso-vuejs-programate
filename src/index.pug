            pre
                code(class="html" data-trim data-noescape)
                    | &lt;div id="app"&gt;
                    |     &lt;ul&gt;
                    |         &lt;li v-for="curso in cursos"&gt;{{ curso }}&lt;/li&gt;
                    |     &lt;/ul&gt;
                    |     &lt;hr&gt;
                    |     &lt;ul&gt;
